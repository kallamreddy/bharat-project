@page
@model TSABanking.Web.Pages.Banks.IndexModel

@{
    ViewData["Title"] = "Bank List";
}

<h1>Bank List</h1>

<p>
    <a asp-page="Create">Create New Bank</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Abreviation
            </th>
            <th>
                Code
            </th>
            <th>
                Company
            </th>
            <th>
                Platform
            </th>
            <th>
                Active
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Bank)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BankName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Abreviation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlatformNavigation.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>

                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
